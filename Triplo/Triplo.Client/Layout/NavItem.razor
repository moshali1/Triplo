<div class="@GetContainerClasses()">
    <i class="fa-solid @Icon @GetIconClasses()"></i>
    <span class="@GetLabelClasses()">@Label</span>
</div>

@code {
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public bool IsMobileView { get; set; }

    private string GetContainerClasses()
    {
        return IsMobileView
            ? "flex items-center gap-3 rounded-lg px-3 py-2 text-gray-300 transition-colors hover:bg-indigo-800 hover:text-white"  // Mobile
            : "flex flex-col items-center justify-center rounded-lg px-2 py-2 text-gray-300 transition-colors hover:bg-indigo-800 hover:text-white"; // Desktop
    }

    private string GetIconClasses()
    {
        return IsMobileView ? "w-5 text-lg" : "text-lg";
    }

    private string GetLabelClasses()
    {
        return IsMobileView ? "text-sm" : "mt-1 text-xs";
    }
}
